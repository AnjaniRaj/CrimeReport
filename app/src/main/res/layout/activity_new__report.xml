<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.pc.crimereport.New_Report">

        <EditText
            android:id="@+id/new_type"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Type of crime"
            android:maxLength="30"/>


        <EditText
            android:id="@+id/new_date"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/new_type"
            android:layout_marginTop="16dp"
            android:hint="Date (YYYY-MM-DD)"
            android:inputType="date" />


        <EditText
            android:id="@+id/new_time"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/new_date"
            android:layout_marginTop="16dp"
            android:hint="Time (HH:MM:SS)"
            android:inputType="time" />

        <EditText
            android:id="@+id/new_loc"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/new_time"
            android:layout_marginTop="16dp"
            android:hint="Location" />


        <EditText
            android:id="@+id/new_suspects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_loc"
            android:layout_marginTop="16dp"
            android:hint="Suspects(if any)" />

        <EditText
            android:id="@+id/new_items"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/new_suspects"
            android:layout_marginTop="16dp"
            android:hint="Items missing(if any)"
            android:maxLength="30" />

        <EditText
            android:id="@+id/new_weapons"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/new_items"
            android:layout_marginTop="16dp"
            android:hint="Weapons used(if any)"
            android:maxLength="30" />

        <EditText
            android:id="@+id/new_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_weapons"
            android:layout_marginTop="16dp"
            android:hint="Description"
            android:maxLength="120"
            android:minHeight="56dp" />

        <Button
            android:id="@+id/new_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_desc"
            android:layout_marginTop="16dp"
            android:background="@color/colorAccent"
            android:text="Done"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


    </RelativeLayout>


</ScrollView>
